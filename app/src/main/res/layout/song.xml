<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="@dimen/artist_item_size"
        android:layout_height="@dimen/artist_item_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/artist_item_size"
        android:layout_marginLeft="@dimen/artist_name_offset"
        android:layout_marginStart="@dimen/artist_name_offset"
        android:layout_toEndOf="@+id/song_image"
        android:layout_toRightOf="@+id/song_image"
        android:orientation="vertical"
        android:paddingTop="@dimen/song_padding">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/song_title"
            android:textSize="@dimen/artist_name" />

        <TextView
            android:id="@+id/song_album"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_muted"
            android:textSize="@dimen/song_album" />
    </LinearLayout>


</RelativeLayout>
