<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/artist_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="@dimen/artist_item_size"
        android:layout_height="@dimen/artist_item_size" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/artist_item_size"
        android:layout_marginLeft="@dimen/artist_name_offset"
        android:layout_marginStart="@dimen/artist_name_offset"
        android:gravity="center_vertical"
        android:id="@+id/artist_name"
        android:layout_toEndOf="@+id/artist_image"
        android:layout_toRightOf="@+id/artist_image"
        android:textSize="@dimen/artist_name"/>

</RelativeLayout>
